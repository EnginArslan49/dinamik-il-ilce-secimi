<!-- model RegisterViewModel -->

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Şirket Kayıt Formu | İşletme Portalı</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
            --light-bg: #f8f9fa;
            --dark-text: #2c3e50;
            --light-text: #7f8c8d;
        }

        body {
            background-color: var(--light-bg);
            background-image: url('/img/background.png');
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: var(--dark-text);
            line-height: 1.6;
            margin: 0;
            min-height: 100vh;
            color: white !important;
        } 

        .renkDegisiklik{
            color:white;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo {
            max-height: 60px;
        }

        .registration-card {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border: none;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 2rem;
        }

            .registration-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem;
            text-align: center;
            border-bottom: none;
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            color:white;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--dark-text);
        }

        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border-radius: 6px;
            border: 1px solid #ddd;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--secondary-color);
                box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
            }

        .input-group-text {
            background-color: #e9ecef;
            border-radius: 6px 0 0 6px;
        }

        .btn-register {
            background-color: var(--secondary-color);
            border: none;
            padding: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            transition: all 0.3s;
        }

            .btn-register:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
            }

            .btn-register:active {
                transform: translateY(0);
            }

        .text-danger {
            color: var(--accent-color) !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .card-footer {
            background-color: rgba(0, 0, 0, 0.03);
            border-top: none;
            padding: 1rem;
            text-align: center;
            font-size: 0.85rem;
        }

        .step-indicator {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .step {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #e0e0e0;
            color: #9e9e9e;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin: 0 10px;
            position: relative;
        }

            .step.active {
                background-color: var(--secondary-color);
                color: white;
            }

            .step.completed {
                background-color: #2ecc71;
                color: white;
            }

            .step:not(:last-child)::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 100%;
                width: 20px;
                height: 2px;
                background-color: #e0e0e0;
            }

            .step.completed:not(:last-child)::after {
                background-color: #2ecc71;
            }

        .password-strength {
            height: 5px;
            background-color: #e0e0e0;
            border-radius: 5px;
            margin-top: 0.5rem;
            overflow: hidden;
        }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s, background-color 0.3s;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }

            .step {
                width: 30px;
                height: 30px;
                font-size: 0.8rem;
            }

                .step:not(:last-child)::after {
                    width: 10px;
                }
        }

        /* Animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="logo-container">
            <img src="https://cdn.pixabay.com/photo/2023/03/06/13/58/logo-7833520_1280.png" alt="İşletme Portalı Logo" class="logo" loading="lazy">
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <div class="registration-card">
                    <div class="card-header">
                        <h2 class="mb-0">Şirket Üyelik Formu</h2>
                        <p class="mb-0 mt-2">İşletmenizi kaydedin ve avantajlardan yararlanın</p>
                    </div>

                    <div class="card-body">
                        <!-- Step Indicator -->
                        <div class="step-indicator">
                            <div class="step active">1</div>
                            <div class="step">2</div>
                            <div class="step">3</div>
                        </div>

                        <form asp-action="Register" method="post" id="registrationForm" novalidate>
                            <div class="mb-4 fade-in">
                                <h5 class="mb-3 text-center"><i class="fas fa-building me-2"></i>Şirket Bilgileri</h5>

                                <div class="mb-3">
                                    <label asp-for="CompanyName" class="form-label"><span class="renkDegisiklik">Şirket Adı </span><span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                                        <input asp-for="CompanyName" class="form-control" placeholder="Şirket adınızı giriniz" required>
                                    </div>
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TaxNumber" class="form-label"><span class="renkDegisiklik">Vergi Numarası </span><span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                        <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numaranızı giriniz" required>
                                    </div>
                                    <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                    <small class="text-muted">Vergi numaranızı doğru girdiğinizden emin olun</small>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Phone" class="form-label"><span class="renkDegisiklik">Telefon</span> <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            <input asp-for="Phone" class="form-control" placeholder="5__ ___ __ __" required>
                                        </div>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label"><span class="renkDegisiklik">Email </span><span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Email adresinizi giriniz" required>
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="SelectedCityId" class="form-label"><span class="renkDegisiklik">İl </span><span class="text-danger">*</span></label>
                                        <select asp-for="SelectedCityId" class="form-select" id="cityDropdown" required>
                                            <option value="">-- İl seçiniz --</option>
                                            <!-- VERİ TABANINDAN GELECEK -->
                                        </select>
                                        <span asp-validation-for="SelectedCityId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="SelectedDistrictId" class="form-label"><span class="renkDegisiklik">İlçe </span><span class="text-danger">*</span></label>
                                        <select asp-for="SelectedDistrictId" class="form-select" id="districtDropdown" disabled required>
                                            <option value="">-- İlçe seçiniz --</option>
                                        </select>
                                        <span asp-validation-for="SelectedDistrictId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label"><span class="renkDegisiklik">Adres </span><span class="text-danger">*</span></label>
                                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Şirket adresinizi giriniz" required></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-register">
                                    <i class="fas fa-arrow-right me-2"></i><span class="renkDegisiklik">Devam Et</span>
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">© @DateTime.Now.Year İşletme Portalı. Tüm hakları saklıdır.</small>
                            <div>
                                <a href="#" class="text-decoration-none me-2"><i class="fas fa-question-circle"></i> Yardım</a>
                                <a href="#" class="text-decoration-none"><i class="fas fa-lock"></i> Gizlilik</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <p>Zaten bir hesabınız var mı? <a href="#" class="text-decoration-none">Giriş Yapın</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Mask Input -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function() {
            // Phone number mask
            $('#Phone').mask('0(000) 000 00 00');

            // İlleri yükle
            $.get("/Home/GetIller", function(data) {
                var cityDropdown = $('#cityDropdown');
                cityDropdown.empty();
                cityDropdown.append('<option value="">-- İl seçiniz --</option>');
                
                $.each(data, function(index, item) {
                    cityDropdown.append($('<option/>', {
                        value: item.ilId,
                        text: item.ilAdi
                    }));
                });
            });

            // City-District dropdown relationship
                    $('#cityDropdown').change(function() {
            var cityId = $(this).val();
            var districtDropdown = $('#districtDropdown');

            if (cityId) {
                districtDropdown.prop('disabled', true);
                districtDropdown.html('<option value="">Yükleniyor...</option>');

                // İl ID'sini string olarak gönderdiğimizden emin oluyoruz
                $.get("/Home/GetIlcelerByIlId", { ilId: cityId.toString() })
                    .done(function(data) {
                        districtDropdown.empty();
                        districtDropdown.append('<option value="">-- İlçe seçiniz --</option>');

                        $.each(data, function(index, item) {
                            // Veritabanındaki property isimlerine dikkat ediyoruz
                            districtDropdown.append($('<option/>', {
                                value: item.ilceId || item.IlceId,
                                text: item.ilceAdi || item.IlceAdi
                            }));
                        });

                        districtDropdown.prop('disabled', false);
                    })
                    .fail(function(error) {
                        console.error("Hata:", error);
                        districtDropdown.html('<option value="">İlçeler yüklenemedi</option>');
                    });
            } else {
                districtDropdown.empty();
                districtDropdown.append('<option value="">-- İlçe seçiniz --</option>');
                districtDropdown.prop('disabled', true);
            }
        });

            // Form submission handling
            $('#registrationForm').submit(function(e) {
                // You can add additional client-side validation here
                console.log('Form submitted');
                // In a real project, you might show a loading spinner here
            });
        });
    </script>
</body>
</html>